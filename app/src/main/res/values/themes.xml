<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Evolv" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryContainer">@color/purple_light</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/purple_secondary</item>
        <item name="colorSecondaryContainer">@color/purple_secondary_light</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Colores de superficie -->
        <item name="android:colorBackground">@color/surface_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/on_surface_light</item>

        <!-- Colores de estado -->
        <item name="colorError">@color/error</item>
        <item name="colorErrorContainer">@color/error_light</item>

        <!-- Configuración del menú overflow -->
        <item name="actionOverflowButtonStyle">@style/Widget.Evolv.Button.Overflow</item>
        <item name="actionOverflowMenuStyle">@style/Widget.Evolv.PopupMenu.Overflow</item>

        <!-- Estilos por defecto -->
        <item name="textInputStyle">@style/Widget.Evolv.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.Evolv.Button</item>
        <item name="popupMenuStyle">@style/Widget.Evolv.PopupMenu</item>
        <item name="android:popupMenuStyle">@style/Widget.Evolv.PopupMenu</item>
        <item name="textAppearancePopupMenuHeader">@style/TextAppearance.Evolv.PopupMenu</item>
        <item name="popupMenuBackground">?attr/colorSurface</item>
        <item name="actionOverflowMenuStyle">@style/Widget.Evolv.PopupMenu</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.Evolv.PopupMenu</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="Theme.Evolv" parent="Base.Theme.Evolv" />

    <!-- Estilos de Botones -->
    <style name="Widget.Evolv.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/ripple</item>
    </style>

    <style name="Widget.Evolv.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/ripple</item>
        <item name="strokeColor">@color/purple_primary</item>
    </style>

    <style name="Widget.Evolv.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/ripple</item>
        <item name="android:textColor">@color/purple_primary</item>
    </style>

    <!-- Botón Overflow -->
    <style name="Widget.Evolv.Button.Overflow" parent="Widget.Material3.Button.IconButton">
        <item name="android:src">@drawable/ic_more_vert</item>
        <item name="tint">@color/on_primary</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Estilos de Menú -->
    <style name="Widget.Evolv.PopupMenu.Overflow" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/purple_light</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:itemBackground">@color/purple_light</item>
    </style>

    <!-- Estilos de Input -->
    <style name="Widget.Evolv.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_primary</item>
        <item name="hintTextColor">@color/purple_primary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconTint">@color/error</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="endIconTint">@color/purple_primary</item>
    </style>

    <!-- Estilos de Texto -->
    <style name="TextAppearance.Evolv.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Evolv.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.Evolv.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@color/surface_variant</item>
        <item name="android:itemBackground">@color/surface_variant</item>
    </style>

    <style name="TextAppearance.Evolv.PopupMenu" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/purple_dark</item>
    </style>
</resources>