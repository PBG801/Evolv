<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_card"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageExercise"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_exercise_placeholder"
        android:contentDescription="@string/exercise_image_desc" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/textExerciseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_name_placeholder"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/textExerciseCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_count_placeholder"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textExerciseDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_duration_placeholder"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
    </LinearLayout>
</LinearLayout>
