<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Evolv" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/purple_light</item>
        <item name="colorPrimaryContainer">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/purple_secondary_light</item>
        <item name="colorSecondaryContainer">@color/purple_secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Colores de superficie -->
        <item name="android:colorBackground">@color/surface_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorSurfaceVariant">@color/scrim</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>

        <!-- Colores de estado -->
        <item name="colorError">@color/error_light</item>
        <item name="colorErrorContainer">@color/error</item>
    </style>
</resources>